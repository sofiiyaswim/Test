<Window x:Class="sueta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sueta"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="10" Grid.Column="0" VerticalAlignment="Center">
            <Button x:Name="OpenButt" Height="40" Margin="0,0,0,20" FontSize="20" Content="Открыть" Click="OpenButt_Click"/>
            <Button x:Name="SaveButt" Height="40" Margin="0,0,0,20" FontSize="20" Content="Сохранить" Click="SaveButt_Click"/>
            <TextBlock FontSize="20" Text="Поле для ввода"/>
            <TextBox Margin="0,0,0,20" x:Name="SubStringTextBox" Height="30" FontSize="20" />
            <ComboBox Margin="0,0,0,20" x:Name="SearchCombo"/>
        </StackPanel>

        <Border Margin="10" BorderBrush="Black" BorderThickness="2" Grid.Column="1">
            <TextBlock TextWrapping="Wrap" x:Name="InfomationTextBlock" Margin="5" FontSize="20" Text="Тут будет ваш текст"/>
        </Border>
    </Grid>
</Window>
